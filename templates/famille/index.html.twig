{% extends 'baseAdmin.html.twig' %}

{% block title %}FAMILLES |{{ parent() }}{% endblock %}

 {% block stylesheets %}
     <link rel="stylesheet" href="{{ asset('assets/css/ajouterProduits.css') }}">
 {% endblock %}

{% block main %}

    <div class="container marge-container">
        <div class=row">


            <!--**************************-->
            <div class="col-12 justify-content-center titre">
                <div>
                    <h2 class="">Ajouter des  Familles <i class="fas fa-fish"></i></h2>
                </div>
            </div>
        </div>

        <!--//*****************************-->
        <div class="row justify-content-around">
            {%  for familly in famille %}

                <div class="col-3  colonne-famPdro" >
                    <div class="">

                        <div>
                            <h6 class="css-CaseFamille">{{ familly.nomFamille }} <a  class="poubelle-lien" href=" {{ path('supprimer_famille',{'id':familly.id}) }}"><i class="fas fa-trash"></i></a></h6>
                            {# {%  for prod in familly.listingProduits %}

                                <p class="colonne-prod">{{ prod.nomProduit }}</p>


                            {% endfor %}#}
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
        <!--fin du main*************-->
        <!--**************************-->
        <div class="row">
            <div class="col-12 justify-content-center formulaireBlue">
                {{ form_start(familleForm, { 'attr' : { 'style': '', 'class': 'caseForm' } }) }}
                <div class="caseform">
                    {{ form_help(familleForm.nomFamille) }}{{ form_errors(familleForm.nomFamille) }}
                    {{ form_label(familleForm.nomFamille) }}: {{ form_widget(familleForm.nomFamille) }}


                    <button class="btn-grad" type="submit">valider</button>
                    {{ form_end(familleForm) }}
                </div>
            </div>
        </div>
        <!--fin du main*************-->


    </div><!--fin de container-->

{% endblock %}

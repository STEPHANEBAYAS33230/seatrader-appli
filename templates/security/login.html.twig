{% extends 'base.html.twig' %}

{% block title %}IDENTIFICATION|{{ parent() }}{% endblock %}
{% block header %}
    <a href="{{ path('home') }}" class="logo">
        <h3 class="titrelogoseatrader" ><i class="fas fa-water logoseatrader" ></i>SEATRADER<p class="petitelignelogoseatrader">Commerce de gros de Produits de la Mer Frais & Surgel√©s</p></h3>
        <!--logo seatrader-->
    </a>
{% endblock %}
{% block main %}
<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}

    <h1 class="h3 mb-3 font-weight-normal">IDENTFICATION</h1>
    <label for="inputNomDeLaSociete">Nom De La Societe</label>
    <input type="text" value="{{ last_username }}" name="nomDeLaSociete" id="inputNomDeLaSociete" class="form-control" required autofocus>
    <label for="inputPassword">MOT DE PASSE</label>
    <input type="password" name="password" id="inputPassword" class="form-control" required>

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >


        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> SE SOUVENIR DE MOI
            </label>
        </div>


    <button class="btn btn-lg btn-primary" type="submit">
        Sign in
    </button>
</form>
{% endblock %}
